<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/api/public/css/styles_carts.css">
</head>

<body>
    <h1>Productos en el Carrito</h1>

    {{#if cart.products.length}}
    <div>
        <button class="sort-button" data-order="asc">Ordenar por Precio Ascendente</button>
        <button class="sort-button" data-order="desc">Ordenar por Precio Descendente</button>
    </div>
    <ul>
        {{#each cart.products}}
        <li>
            <p>Nombre: {{this.productId.title}}</p>
            <p>Precio: {{this.productId.price}}</p>
            <p>Categor√≠a: {{this.productId.category}}</p>
            <p>Cantidad: {{this.quantity}}</p>
            <div>
            <button class="description" data-product-id="{{this.productId._id}}">Ver descripcion</button>
        </div>
        </li>
        {{/each}}
        <div>
            <button class="delete-products" cart-id="{{cart._id}}">Vaciar Carrrito</button>
        </div>
    </ul>
    {{else}}
    <p>No hay productos en este carrito.</p>
    {{/if}}
</body>

<script src="/api/public/js/cart.js"></script>